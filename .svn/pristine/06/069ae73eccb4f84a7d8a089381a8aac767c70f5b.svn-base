<!-- Componente Layout Header -->
<ion-header [translucent]="true">
  <ion-toolbar>
    <ion-buttons slot="start">
      <ion-menu-button></ion-menu-button>
    </ion-buttons>
    <ion-title class="headerTitle">Papás</ion-title>
  </ion-toolbar>
</ion-header>

<ion-content [fullscreen]="true">

  <div id="container">

    <ion-card>
      <ion-item button routerDirection="root" routerLink="/notifications" class="ion-activated">
        <ion-icon name="notifications" slot="start"></ion-icon>
        <ion-label>
          <ion-card-header>
            <ion-card-title>AVISOS Y NOTIFICACIONES</ion-card-title>
            <ion-card-subtitle>Gestión de avisos en Papás</ion-card-subtitle>
          </ion-card-header>
        </ion-label>
      </ion-item>
    </ion-card>

    <ion-card>
      <ion-item button routerDirection="root" routerLink="/folder/agenda" class="ion-activated">
        <ion-icon name="calendar" slot="start"></ion-icon>
        <ion-label>
          <ion-card-header>
            <ion-card-title>AGENDA</ion-card-title>
            <ion-card-subtitle>Consulta de tareas y examenes</ion-card-subtitle>
          </ion-card-header>
        </ion-label>
      </ion-item>
    </ion-card>

    <ion-card>
      <ion-item button routerDirection="root" routerLink="/folder/accesos" class="ion-activated">
        <ion-icon name="people" slot="start"></ion-icon>
        <ion-label>
          <ion-card-header>
            <ion-card-title>ACCESOS</ion-card-title>
            <ion-card-subtitle>Gestionar acceso de mi familia</ion-card-subtitle>
          </ion-card-header>
        </ion-label>
      </ion-item>
    </ion-card>
  </div>
</ion-content>

<!-- Componente Layout Footer-->
<ion-footer>
  <ion-toolbar>
    <ion-title class="footer">Junta de Comunidades de Castilla-La Mancha</ion-title>
  </ion-toolbar>
</ion-footer>